{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeStrategy": "squash",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "stacklok/toolhive-studio",
      "description": "Update ToolHive Studio version and hash in nix",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "managerFilePatterns": ["/^nix/modules/home/toolhive-studio\\.nix$/"],
      "matchStrings": [
        "version = \"(?<currentValue>.*?)\";\\s+src = pkgs\\.fetchurl \\{\\s+url = \"https://github\\.com/stacklok/toolhive-studio/releases/download/v\\$\\{version\\}/ToolHive-arm64\\.dmg\";\\s+sha256 = \"(?<currentDigest>sha256-[A-Za-z0-9+/=]+|[a-f0-9]{52,64})\";"
      ]
    }
  ],
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":gitSignOff",
    ":dependencyDashboard",
    ":label(dependencies)",
    ":rebaseStalePrs",
    ":enableVulnerabilityAlertsWithAdditionalLabel(kind/security)",
    ":automergeMinor",
    ":automergeDigest",
    ":automergeLinters",
    ":automergeTesters",
    ":prConcurrentLimit20",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    "group:linters",
    ":disableRateLimiting",
    ":maintainLockFilesWeekly"
  ],
  "gitIgnoredAuthors": ["205507218+smyklot[bot]@users.noreply.github.com"],
  "ignorePaths": [
    "**/tmp/**",
    ".github/workflows/smyklot-pr-commands.yml",
    ".github/workflows/smyklot-poll.yml",
    "**/knowledge/**",
    "**/secrets/**",
    "**/todos/**"
  ],
  "nix": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "addLabels": ["area/ci"],
      "commitMessageTopic": "{{depName}} action",
      "description": "GitHub Actions dependencies",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci"
    },
    {
      "description": "Group Go tool dependencies",
      "groupName": "Go tooling",
      "matchDepTypes": ["require"],
      "matchManagers": ["gomod"],
      "matchPackageNames": ["/^golang.org/x/tools/"]
    },
    {
      "description": [
        " Group dependency bumps from selected GitHub sources into a single PR across managers",
        " (e.g., mise and gomod) to avoid separate PRs per manager"
      ],
      "groupName": "{{{replace 'https://github\\.com/[a-z-]+/' '' sourceUrl}}}",
      "matchSourceUrls": [
        "https://github.com/{onsi/ginkgo,golangci/golangci-lint}"
      ]
    },
    {
      "description": "Enable Go version updates in go.mod",
      "matchDepNames": ["go"],
      "matchManagers": ["gomod"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Go version updates across mise and go.mod",
      "groupName": "Go",
      "matchDatasources": ["golang-version"],
      "matchPackageNames": ["go"]
    },
    {
      "description": "Smyklot action managed by sync-smyklot workflow",
      "enabled": false,
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["smykla-labs/smyklot"]
    },
    {
      "addLabels": ["mise"],
      "automerge": true,
      "automergeType": "pr",
      "description": "Automerge non-major mise updates via PR",
      "matchManagers": ["mise"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "vulnerabilityAlerts": {
    "automerge": true
  }
}
